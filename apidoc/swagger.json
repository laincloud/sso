{
    "swagger": "2.0",
    "info": {
        "title": "SSO API 文档",
        "version": "1.1.0",
        "contact": {
            "email": "chaoyiwang@creditease.cn"
        }
    },
    "host": "sso.example.com",
    "basePath": "/api",
    "schemes": [
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users": {
            "post": {
                "summary": "注册用户",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "用户注册信息",
                        "schema": {
                            "$ref": "#/definitions/UserRegistration"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "已发送验证邮件，待用户进行邮件验证"
                    },
                    "409": {
                        "description": "已有相同用户名或者相同邮箱的用户被注册"
                    }
                }
            }
        },
        "/user-register-validation": {
            "get": {
                "summary": "校验用户注册信息",
                "parameters": [
                    {
                        "name": "code",
                        "in": "query",
                        "type": "string",
                        "description": "用于验证的 code",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "验证成功，用户已创建",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "code 不存在"
                    },
                    "409": {
                        "description": "已有相同用户名或者相同邮箱的用户被注册"
                    },
                    "410": {
                        "description": "该 code 已过期"
                    }
                }
            }
        },
        "/users/{username}": {
            "parameters": [
                {
                    "in": "path",
                    "name": "username",
                    "required": true,
                    "description": "用户名",
                    "type": "string",
                    "format": "slug"
                }
            ],
            "get": {
                "summary": "获取用户信息",
                "description": "如果传入 sso 管理员或者本人的认证信息，可以得到 mobile 和 email，否则仅仅拿到用户公开的信息",
                "responses": {
                    "200": {
                        "description": "用户信息",
                        "schema": {
                            "$ref": "#/definitions/UserWithGroups"
                        }
                    }
                }
            },
            "delete": {
                "summary": "删除用户",
                "description": "会同时将该用户从所有组中移除。",
                "responses": {
                    "204": {
                        "description": "成功删除用户"
                    },
                    "403": {
                        "description": "当前用户不在 admins 组中"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:user"
                        ]
                    }
                ]
            }
        },
        "/users/{username}/request-reset-password": {
            "parameters": [
                {
                    "in": "path",
                    "name": "username",
                    "required": true,
                    "description": "用户名",
                    "type": "string",
                    "format": "slug"
                }
            ],
            "post": {
                "summary": "请求重置用户密码",
                "description": "向用户的注册邮箱发送重置密码邮件",
                "response": {
                    "202": {
                        "description": "已发送重置密码邮件，待用户进行邮箱验证"
                    }
                }
            }
        },
        "/request-reset-password-by-email": {
            "post": {
                "summary": "通过邮箱请求重置用户密码",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "用户邮箱",
                        "schema": {
                            "$ref": "#/definitions/UserEmailObject"
                        }
                    }
                ],
                "responses": {
                    "202": {
                        "description": "已发送重置密码邮件，待用户进行邮箱验证"
                    }
                }
            }
        },
        "/users/{username}/reset-password": {
            "parameters": [
                {
                    "in": "path",
                    "name": "username",
                    "required": true,
                    "description": "用户名",
                    "type": "string",
                    "format": "slug"
                }
            ],
            "post": {
                "summary": "更新用户密码",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "password": {
                                    "type": "string",
                                    "description": "新密码",
                                    "minLength": 4,
                                    "required": true
                                },
                                "code": {
                                    "type": "string",
                                    "description": "用于验证的 code",
                                    "required": true
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "成功更新密码"
                    }
                }
            }
        },
        "/me": {
            "get": {
                "summary": "获取当前用户的信息",
                "responses": {
                    "200": {
                        "description": "用户信息",
                        "schema": {
                            "$ref": "#/definitions/UserWithGroups"
                        }
                    }
                },
                "security": [
                    {
                        "oauth": []
                    }
                ]
            }
        },
        "/apps": {
            "post": {
                "summary": "创建应用",
                "description": "创建一个新应用，返回用于 OAuth2 流程的Client ID和secret。\n\n同时会自动创建一个 group 用于管理该应用，该 group\n创建时只有一个成员，即当前创建应用的用户。\n",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "需要创建的应用",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "fullname": {
                                    "$ref": "#/definitions/FullName"
                                }
                            },
                            "required": [
                                "fullname"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "成功创建应用",
                        "schema": {
                            "$ref": "#/definitions/App"
                        }
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:app"
                        ]
                    }
                ]
            }
        },
        "/groups": {
            "post": {
                "summary": "创建用户组",
                "description": "创建一个新用户组。\n\n当前用户会自动加入该组，并成为该组的管理员。\n",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "需要创建的组",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/Slug"
                                },
                                "fullname": {
                                    "$ref": "#/definitions/FullName"
                                }
                            },
                            "required": [
                                "name"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "成功创建用户组",
                        "schema": {
                            "$ref": "#/definitions/Group"
                        }
                    },
                    "409": {
                        "description": "名字已被占用"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            }
        },
        "/groups/{groupname}": {
            "parameters": [
                {
                    "in": "path",
                    "name": "groupname",
                    "required": true,
                    "type": "string",
                    "format": "slug"
                }
            ],
            "get": {
                "summary": "列出组的信息",
                "responses": {
                    "200": {
                        "description": "组信息",
                        "schema": {
                            "$ref": "#/definitions/GroupWithMembers"
                        }
                    }
                }
            },
            "delete": {
                "summary": "删除组",
                "description": "只有组的管理员才能删除组",
                "responses": {
                    "204": {
                        "description": "成功删除组"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            }
        },
        "/groups/{groupname}/members/{username}": {
            "parameters": [
                {
                    "in": "path",
                    "name": "groupname",
                    "required": true,
                    "type": "string",
                    "format": "slug"
                },
                {
                    "in": "path",
                    "name": "username",
                    "required": true,
                    "type": "string",
                    "format": "slug"
                }
            ],
            "get": {
                "summary": "得到用户在组中的角色",
                "responses": {
                    "200": {
                        "description": "成功找到用户，返回角色"
                    },
                    "404": {
                        "description": "组或用户不存在，或者该组中没有该用户"
                    }
                }
            },
            "put": {
                "summary": "向组中加入用户",
                "description": "需要当前用户是组管理员身份。\n\n如果未指定 `role` ，则对于新增成员，默认为普通成员；\n对于已有成员，默认角色不变。\n",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": false,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "role": {
                                    "enum": [
                                        "admin",
                                        "normal"
                                    ],
                                    "description": "默认为 normal"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功加入组"
                    },
                    "404": {
                        "description": "组或者用户不存在"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            },
            "delete": {
                "summary": "从组中去除一名用户",
                "responses": {
                    "204": {
                        "description": "成功去除用户"
                    },
                    "404": {
                        "description": "组或用户不存在"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            }
        },
        "/groups/{groupname}/group-members/{sonname}": {
            "parameters": [
                {
                    "in": "path",
                    "name": "groupname",
                    "required": true,
                    "type": "string",
                    "format": "slug"
                },
                {
                    "in": "path",
                    "name": "sonname",
                    "required": true,
                    "type": "string",
                    "format": "slug"
                }
            ],
            "put": {
                "summary": "向组中加入组",
                "description": "需要当前用户是组管理员身份。\n\n如果未指定 `role` ，则对于新增成员，默认为普通成员；\n对于已有成员，默认角色不变。\n",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": false,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "role": {
                                    "enum": [
                                        "admin",
                                        "normal"
                                    ],
                                    "description": "默认为 normal"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功加入组"
                    },
                    "400": {
                        "description": "由于逻辑关系，比如超过最大深度或者出现循环依赖，导致不能加入"
                    },
                    "404": {
                        "description": "组或者用户不存在"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            },
            "delete": {
                "summary": "从组中去除一个组",
                "responses": {
                    "204": {
                        "description": "成功去除组"
                    },
                    "404": {
                        "description": "组或用户不存在"
                    }
                },
                "security": [
                    {
                        "oauth": [
                            "write:group"
                        ]
                    }
                ]
            }
        },
        "apply": {
            "get": {
                "summary": "查看申请",
                "description": "申请查看 \n",
                "parameters": [
                    {
                        "in": "query",
                        "name": "from",
                        "required": false,
                        "type": "string",
                        "description": "起始条目，默认为50条"
                    },
                    {
                        "in": "query",
                        "name": "to",
                        "required": false,
                        "type": "string",
                        "description": "终止条目"
                    },
                    {
                        "in": "query",
                        "name": "applicant_email",
                        "required": false,
                        "type": "string",
                        "description": "被查看者邮箱，筛选条件"
                    },
                    {
                        "in": "query",
                        "name": "status",
                        "required": false,
                        "type": "string",
                        "description": "申请状态，筛选条件"
                    },
                    {
                        "in": "query",
                        "name": "commit_email",
                        "required": false,
                        "type": "string",
                        "description": "审核人邮箱"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "查看成功",
                        "type": "array",
                        "items": {
                            "schema": {
                                "$ref": "#/definitions/Application"
                            }
                        }
                    }
                },
                "400": {
                    "description": "查看失败"
                }
            },
            "post": {
                "summary": "发起申请",
                "description": "申请描述 \n",
                "parameters": [
                    {
                        "in": "body",
                        "name": "target_type",
                        "required": true,
                        "type": "string",
                        "description": "申请的类型"
                    },
                    {
                        "in": "body",
                        "name": "reason",
                        "required": true,
                        "type": "string",
                        "description": "申请的理由"
                    },
                    {
                        "in": "body",
                        "name": "target",
                        "required": true,
                        "description": "申请内容",
                        "schema": {
                            "$ref": "#/definitions/Target"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "申请成功",
                        "schema": {
                            "$ref": "#/definitions/ApplicationResp"
                        }
                    }
                },
                "400": {
                    "description": "申请失败"
                }
            }
        },
        "applications/{application_id}": {
            "post": {
                "summary": "处理用户申请",
                "description": "处理申请 \n",
                "parameters": [
                    {
                        "in": "path",
                        "name": "application_id",
                        "required": true,
                        "type": "string",
                        "description": "处理中的申请id"
                    },
                    {
                        "in": "query",
                        "name": "action",
                        "required": true,
                        "type": "string",
                        "description": "approve/reject"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "处理成功",
                        "schema": {
                            "$ref": "#/definitions/Application"
                        }
                    }
                },
                "400": {
                    "description": "处理失败"
                }
            }
        }
    },

    "securityDefinitions": {
        "oauth": {
            "type": "oauth2",
            "flow": "accessCode",
            "authorizationUrl": "https://sso.example.com/oauth2/auth",
            "tokenUrl": "https://sso.example.com/oauth2/token",
            "scopes": {
                "write:user": "修改用户信息，或删除用户",
                "write:app": "创建新应用，或修改用户可管理的应用信息",
                "write:group": "创建新用户组，或修改用户参加的组"
            }
        }
    },
    "definitions": {
        "UserRegistration": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Slug"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                },
                "email": {
                    "$ref": "#/definitions/UserEmail"
                },
                "password": {
                    "type": "string",
                    "minLength": 4
                },
                "mobile": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "email",
                "password"
            ]
        },
        "UserEmailObject": {
            "type": "object",
            "properties": {
                "email": {
                    "$ref": "#/definitions/UserEmail"
                }
            },
            "required": [
                "email"
            ]
        },
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Slug"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                },
                "email": {
                    "$ref": "#/definitions/UserEmail"
                },
                "mobile": {
                    "type": "string"
                }
            }
        },
        "App": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "应用ID，用于 OAuth2 授权过程"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                },
                "secret": {
                    "type": "string",
                    "description": "用于 OAuth2 过程的应用私钥"
                },
                "admin_group": {
                    "$ref": "#/definitions/Group",
                    "description": "对本应用拥有管理权限的组"
                }
            }
        },
        "Group": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Slug"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                }
            }
        },
        "UserWithGroups": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Slug"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                },
                "email": {
                    "$ref": "#/definitions/UserEmail"
                },
                "mobile": {
                    "type": "string"
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Slug",
                        "description": "用户所属的组名"
                    }
                }
            }
        },
        "GroupWithMembers": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/definitions/Slug"
                },
                "fullname": {
                    "$ref": "#/definitions/FullName"
                },
                "members": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "$ref": "#/definitions/Slug"
                            },
                            "role": {
                                "$ref": "#/definitions/MemberRole",
                                "description": "如果忽略，则为普通成员"
                            }
                        },
                        "required": [
                            "name"
                        ],
                        "description": "组成员"
                    }
                },
                "group_members": {}
            }
        },
        "FullName": {
            "type": "string",
            "description": "用于显示的名称",
            "maxLength": 128
        },
        "Slug": {
            "type": "string",
            "description": "全局唯一的名称",
            "pattern": "[A-Za-z][A-Za-z0-9-]*",
            "maxLength": 32
        },
        "UserEmail": {
            "type": "string",
            "description": "以 domain 参数结尾的 email 地址, 默认为 @example.com"
        },
        "Target": {
            "type": "object",
            "properties": {
                "role": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "Application": {
            "type": "object",
            "properties": {
                "id":{
                    "type": "integer"
                },
                "applicant_email": {
                    "type": "string"
                },
                "target_type": {
                    "type":"string"
                },
                "target": {
                    "$ref": "#/definitions/Target"
                },
                "reason": {
                    "type":"string"
                },
                "status": {
                    "type":"string"
                },
                "commitor_email": {
                    "type":"string"
                },
                "created": {
                    "type":"string"
                },
                "updated": {
                    "type":"string"
                }
            }
        }
    }
}
